@{
    ViewData["Title"] = "Adicionar";
}

<div class="container text-center">
    <h1 class="display-6">Adicione um filme:</h1>
</div>

<form class="flex-column" action="/Post/AddItemList" method="post">

    <div class="wrapper-input flex-column-left">
        <label class="label-block">Título</label>
        <input class="input-block" name="Title" />
        @Html.ValidationMessage("Title")
    </div>

    <div class="wrapper-input flex-column-left">
        <label class="label-block">Resumo</label>
        <textarea class="input-textArea" name="Resume"></textarea>
        @Html.ValidationMessage("Resume")
    </div>

    <div class="wrapper-input flex-column-left">
        <label class="label-block">Categoria</label>
        <input class="input-block" name="Category" />
        @Html.ValidationMessage("Category")
    </div>

    <div class="wrapper-button flex-column-left">
        <button class="button--medium" type="submit">Salvar</button>
    </div>
</form>
